{% extends "layout.html.twig" %}

{% block title %}Panier{% endblock %}

{% block content %}
<div class="jumbotron">
    <h2 class="text-center">Contenu de votre panier</h2>
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Titre de l'album</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Total</th>
                </tr>
            </thead>
            {% set total = 0 %}
            {% for cart in carts %}
                <tr>
                    <td><a href=/burger/{{ cart.burger.id }}>{{ cart.burger.name }}</a></td>
                    <td>{{ cart.quantity }}</td>
                    <td>{{ cart.burger.price }} €</td>
                    <td>{{ cart.burger.price*cart.quantity }} €</td>
                    <td><a href="/cart/remove/{{ cart.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
                    {% set total = total + cart.burger.price*cart.quantity %}
                </tr>
            {% endfor %}
            <tr>
                <td><strong>Total</td>
                <td></td>
                <td></td>
                <td><strong>{{ total }} €</strong></td>
            </tr>
        </table>
    </div>
</div>
{% endblock %}

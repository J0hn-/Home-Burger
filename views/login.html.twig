{% extends 'layout.html.twig' %}

{% block title %}Identification{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if error %}
<div class="alert alert-danger">
    <strong>Login failed!</strong> {{ error }}
</div>
{% endif %}
<div class="well">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a href="#connection" data-toggle="tab">Connexion</a></li>
            <li><a href="#inscription" data-toggle="tab">Inscription</a></li>
        </ul>
    </div>
  </div>
  <div class="tab-content">
    <div class="tab-pane fade in active" id="connection">
      <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
          <div class="form-group">
              <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
              <input type="email" name="_username" value="{{ last_username }}" class="form-control" placeholder="Enter your email" required autofocus>
              </div>
          </div>
          <div class="form-group">
              <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                  <input type="password" name="_password" class="form-control" placeholder="Enter your password" required>
              </div>
          </div>
          <div class="form-group">
              <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                  <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Se connecter</button>
              </div>
          </div>
      </form>
    </div>
    <div class="tab-pane fade" id="inscription">
      {% if signupForm %}
        {{ form_start(signupForm, { 'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(signupForm.lastname, 'Nom', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-3">
                    {{ form_errors(signupForm.lastname) }}
                    {{ form_widget(signupForm.lastname, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.firstname, 'Pr√©nom', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-3">
                    {{ form_errors(signupForm.firstname) }}
                    {{ form_widget(signupForm.firstname, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.address, 'Adresse', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-4">
                    {{ form_errors(signupForm.address) }}
                    {{ form_widget(signupForm.address, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.postalcode, 'Code postal', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-2">
                    {{ form_errors(signupForm.postalcode) }}
                    {{ form_widget(signupForm.postalcode, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.town, 'Ville', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-3">
                    {{ form_errors(signupForm.town) }}
                    {{ form_widget(signupForm.town, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.mail, 'Courriel', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-3">
                    {{ form_errors(signupForm.mail) }}
                    {{ form_widget(signupForm.mail, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(signupForm.password, 'Mot de passe', { 'label_attr':  {
                    'class': 'col-sm-5 control-label required'
                }}) }}
                <div class="col-sm-3">
                    {{ form_errors(signupForm.password) }}
                    {{ form_widget(signupForm.password, { 'attr':  {
                        'required': 'required',
                        'class': 'form-control'
                    }}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-5 col-sm-3">
                    <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-save"></span> S'inscrire</button>
                </div>
            </div>
        {{ form_end(signupForm) }}
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}

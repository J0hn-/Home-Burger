<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/images/icone.png" rel="shortcut icon" type="image/png"/>
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="{{ app.request.basepath }}/css/homeburger.css" rel="stylesheet" />
    <title>Home Burger - {% block title %}{% endblock %}</title>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
              <a class="navbar-brand" href="/"><span class="glyphicon glyphicon-cutlery"></span> Home-Burger</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-target">
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Catégories <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    {% for category in categories %}
                    <li><a href="/cat/{{ category.id }}">{{ category.name }}</a></li>
                    {% endfor %}
                  </ul>
                </li>
              </ul>
              <ul class="nav navbar-nav">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">Ingrédients <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="/ing/1">Cornichons</a></li>
                    <li><a href="/ing/2">Salade, Tomates, Oignons</a></li>
                    <li><a href="/ing/3">Fromage</a></li>
                    <li><a href="/ing/4">Steak</a></li>
                    <li><a href="/ing/5">Poulet</a></li>
                    <li><a href="/ing/6">Poisson</a></li>
                    <li><a href="/ing/7">Oeuf</a></li>
                    <li><a href="/ing/8">Steak Végétarien</a></li>
                    <li><a href="/ing/9">Piment</a></li>
                  </ul>
                </li>
              </ul>
              <ul class="nav navbar-nav navbar-right">
              {% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span> Bienvenue, {{ app.security.token.user.firstname }} <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                      <li><a href="{{ path('profile') }}">Profil</a></li>
                      <li><a href="{{ path('logout') }}">Deconnexion</a></li>
                    </ul>
              </li>
              <li>
                <a href="/card">
                    <span class="glyphicon glyphicon-shopping-cart"></span> Panier <span class="badge">0</span>
                </a>
              </li>
              {% else %}
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-user"></span> Non connecté <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="{{ path('login') }}">Identification</a></li>
                    </ul>
              </li>
              {% endif %}
              </ul>
            </div>
        </div><!-- /.container -->
    </nav>

    <div id="content">{% block content %}{% endblock %}</div>

    <!-- jQuery -->
    <script src="/lib/jquery/jquery-1.11.2.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
